generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String 
  job Jobs[]
}

model Jobs {
  id Int @id @default(autoincrement())
  company String 
  postions String
  status Status @default(pending)
  createdBy Users @relation(fields: [user_id], references: [id])
  user_id Int 
  
  
}

enum Status{
  interview
  declined
  pending
}